@page "/clients"
@using Admin.Services
@using Admin.Dto_s
@inject AdminService AdminService
@inject IJSRuntime JSRuntime // Injecting IJSRuntime

<h3>Client List</h3>

@if (clients == null)
{
    <p><em>Loading...</em></p>
}
else if (clients.Count == 0)
{
    <p>No clients found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Account ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in clients)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.Email</td>
                    <td>@client.AccountId</td>
                    <td>
                        <button class="btn btn-danger" @onclick="() => DeleteClient(client.ClientId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ClientBlazorDto> clients;

    protected override async Task OnInitializedAsync()
    {
        clients = await AdminService.GetAllClientsAsync();
    }

    private async Task DeleteClient(int clientId)
    {
        // Invoke the confirmation dialog using the injected JSRuntime instance
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", new[] { "Are you sure you want to delete this client?" });

        if (confirmed)
        {
            await AdminService.DeleteClientAsync(clientId);
            clients = await AdminService.GetAllClientsAsync(); // Refresh the client list
        }
    }
}
